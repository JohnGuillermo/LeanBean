<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView android:text="@string/listExercise" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewExercises" />

    <Spinner
        android:id="@+id/dynamic_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView android:text="@string/listCal" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewCalories" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories per Hour"
        android:id="@+id/editTextCal" />

</LinearLayout>

