<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ktyler4.leanbean.WeightActivity"
    android:background="@drawable/weightplan">

    <Button
        android:id="@+id/btnProfile"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="360dp"
        android:onClick="buttonOnClick"
        android:background="@drawable/button_text"/>
    <Button
        android:id="@+id/btnWeight"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="415dp"
        android:onClick="buttonOnClick"
        android:background="@drawable/button_text"/>

    <Button
        android:id="@+id/btnFood"
        android:layout_width="71dp"
        android:layout_height="66dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="164dp"
        android:layout_marginTop="359dp"
        android:onClick="buttonOnClick"
        android:background="@drawable/button_text"/>

    <Button
        android:id="@+id/btnExercise"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="204dp"
        android:layout_marginTop="414dp"
        android:onClick="buttonOnClick"
        android:background="@drawable/button_text"/>

    <Button
        android:id="@+id/btnProgress"
        android:layout_width="70dp"
        android:layout_height="68dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="243dp"
        android:layout_marginTop="358dp"
        android:onClick="buttonOnClick"
        android:background="@drawable/button_text"/>
</RelativeLayout>
